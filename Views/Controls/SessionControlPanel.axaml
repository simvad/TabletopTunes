<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TabletopTunes.Views.Controls.SessionControlPanel">
    <Border Background="#2d2d2d" CornerRadius="8" Padding="10">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto" Margin="5">
            <!-- Close Button -->
            <Button Grid.Row="0" Grid.Column="1"
                    Name="CloseButton"
                    Content="Ã—"
                    FontSize="20"
                    Padding="8,0"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Right"
                    Background="Transparent"/>

            <!-- Session Status -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,10">
                <TextBlock Name="StatusText" 
                         Text="Not Connected" 
                         FontWeight="Bold"
                         HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center"
                          IsVisible="False"
                          Name="SessionCodePanel">
                    <TextBlock Text="Session Code: "
                             VerticalAlignment="Center"/>
                    <TextBox Name="SessionCodeText"
                             FontFamily="Consolas"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Padding="0"/>
                </StackPanel>
            </StackPanel>

            <!-- Host/Join Controls -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                      Name="ConnectionControls" Spacing="5">
                <Button Name="HostButton"
                        Content="Host Session"
                        HorizontalAlignment="Stretch"
                        Classes="accent"/>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Name="JoinCodeInput"
                             Watermark="Enter Session Code"
                             Margin="0,0,5,0"/>
                    <Button Name="JoinButton"
                            Content="Join"
                            Grid.Column="1"/>
                </Grid>
            </StackPanel>

            <!-- Connected Clients List -->
            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                      Name="ClientsList"
                      Margin="0,10,0,0"
                      IsVisible="False">
                <TextBlock Text="Connected Clients:"
                         FontWeight="Bold"
                         Margin="0,0,0,5"/>
                <ItemsControl Name="ClientsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                     Margin="5,2"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
